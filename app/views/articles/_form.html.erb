<%= render 'shared/errors', obj: @article %>

<%= form_for @article do |f| %>
  <div class='form-group'>
    <%= f.label :title %>
  </div>

  <div class='form-group'>
      <%= f.text_field :title, class: 'form-control', placeholder: "Title", autofocus: true %>
  </div>

  <div class='form-group'>
      <%= f.label :description %>
  </div>

  <div class='form-group'>
    <%= f.text_area :description, rows: 10, class: 'form-control', placeholder: "Description", autofocus: true %>
  </div>

  <div class='form-group'>
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
      <%= cb.label(class: 'checkbox-inline input_checkbox') {cb.check_box(class: 'checkbox') + cb.text } %>
    <% end %>
  </div>

  <div class='form-group'>
    <%= f.submit class: 'btn btn-primary' %>
  </div>

<% end %>
  <div class='form-group'>
    <%= link_to 'Back', articles_path, class: 'btn btn-primary' %>
  </div>
