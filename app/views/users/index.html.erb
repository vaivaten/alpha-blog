<h1>Users</h1>

<div class='container'>
  <div class='row'>
  <% @users.each do |user| %>
    <div class='col-md-2'>
      <%= link_to gravatar_for(user), user_path(user) %>
      <%= link_to user.username, user_path(user) %><hr>
      <%= pluralize(user.articles.count, "article") if user.articles %>
    </div>
    <% end %>
  </div>
</div>
