<% if obj.errors.any? %>
  <div class='alert alert-secondary'>
    <h2 class='panel-title'>
      <%= pluralize(obj.errors.count, 'error') %>
      prohibited this from being saved:
    </h2>
    <div class='panel-body'>
      <p>
        <% obj.errors.full_messages.each do |msg| %>
          <p><%= msg %></p>
        <% end %>
      </p>
    </div>
  </div>
<% end %>
