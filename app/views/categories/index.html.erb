<h1>Categories</h1>

<div class='container'>
  <div class='row'>
  <% @categories.each do |category| %>
    <div class='col-md-12'>
      <%= link_to "#{category.name}", category_path(category) %> -
      <%= pluralize(category.articles.count, "article") %>
    </div>
  <% end %>
  </div>
  <%= will_paginate @categories %>
</div>
