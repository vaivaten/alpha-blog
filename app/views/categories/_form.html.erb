<%= render 'shared/errors', obj: @category %>

<%= form_for @category do |f| %>
  <div class='form-group'>
    <%= f.label :name %>
  </div>

  <div class='form-group'>
      <%= f.text_field :name, class: 'form-control', placeholder: "Enter Category", autofocus: true %>
  </div>

  <div class='form-group'>
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>
  <div class='form-group'>
    <%= link_to 'Back', articles_path, class: 'btn btn-primary' %>
  </div>
